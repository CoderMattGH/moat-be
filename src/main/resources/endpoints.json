{
  "endpoints": [
    {
      "path": "GET /",
      "description": "Returns all of the available API endpoints."
    },
    {
      "path": "GET /score/",
      "description": "Returns all scores.",
      "exampleResponse": {
        "scores": [
          {
            "id": 1,
            "score": 100,
            "userId": 1,
            "username": "MATTD"
          },
          {
            "id": 2,
            "score": 50,
            "userId": 2,
            "username": "Billy"
          }
        ]
      }
    },
    {
      "path": "GET /score/{userId}/",
      "description": "Return all the user's scores.",
      "exampleResponse": {
        "scores": [
          {
            "id": 1,
            "score": 100,
            "userId": 1,
            "username": "MATTD"
          },
          {
            "id": 2,
            "score": 200,
            "userId": 1,
            "username": "MATTD"
          }
        ]
      }
    },
    {
      "path": "DELETE /score/",
      "authRequired": true,
      "requiredRole": "admin",
      "description": "Deletes all scores."
    },
    {
      "path": "DELETE /score/{userId}/",
      "authRequired": true,
      "requiredRole": "admin",
      "description": "Deletes all of the user's scores."
    },
    {
      "path": "POST /score/",
      "description": "Saves the user's score.",
      "authRequired": true,
      "requiredRole": "user",
      "requestBody": {
        "userId": "user's nickname",
        "score": 40
      },
      "exampleResponse": {
        "score": {
          "id": 5,
          "score": 200,
          "userId": 1,
          "username": "MATTD"
        }
      }
    },
    {
      "path": "GET /user/",
      "description": "Returns all users.",
      "exampleResponse": [
        {
          "id": 1,
          "username": "MATTD",
          "email": "mattd@email.com"
        },
        {
          "id": 2,
          "username": "BOBBY",
          "email": "bobby@email.com"
        }
      ]
    },
    {
      "path": "GET /${username}/",
      "description": "Returns the specified user.",
      "exampleResponse": {
        "id": 1,
        "username": "MATTD",
        "email": "mattd@email.com"
      }
    },
    {
      "path": "POST /user/",
      "description": "Creates a new user",
      "requestBody": {
        "username": "BILLY",
        "email": "billy@email.com",
        "password": "password"
      },
      "exampleResponse": {
        "id": 3,
        "username": "BILLY",
        "email": "billy@email.com"
      }
    }
  ]
}